<body class="background-image">

  <div class="rounded-lg login bg-box">
    <h2>Signup</h2>

    <form action="/signup" method="POST" id="form-container" class="form-group">
      <label for="username">Username</label>
      <input id="username" type="text" name="username" placeholder="JonSnow" class="form-control">
      <br><br>
      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Your password" class="form-control">

      {{#if message}}
      <div class="error-message">{{ message }}</div>
      {{/if}}
      <br><br>

      <button class="btn-lg btn-light btn-space left-center-small">Create account</button>

      <p class="account-message btn-space">
        Do you already have an account?
        <a href="/login">Login</a>
      </p>
    </form>
  </div>

</body>